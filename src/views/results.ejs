<div class="hero-section">
    <div class="container">
        <header class="text-center mb-4">
            <h1 class="hero-title">Simulation Results</h1>
        </header>
    </div>
</div>

<div class="container py-5">
    <main>
        <div class="card mb-4">
            <div class="card-header bg-light">
                <h2 class="mb-0">Property Information</h2>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <strong class="text-muted d-block mb-1">Email</strong>
                        <span><%= simulation.email %></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <strong class="text-muted d-block mb-1">Purchase Price</strong>
                        <span><%= typeof formatCurrency !== 'undefined' ? formatCurrency(simulation.purchasePrice, locale, currency) : '€' + simulation.purchasePrice.toLocaleString(locale || 'en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <strong class="text-muted d-block mb-1">Monthly Rent</strong>
                        <span><%= typeof formatCurrency !== 'undefined' ? formatCurrency(simulation.monthlyRent, locale, currency) : '€' + simulation.monthlyRent.toLocaleString(locale || 'en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <strong class="text-muted d-block mb-1">Annual Fee</strong>
                        <span><%= typeof formatCurrency !== 'undefined' ? formatCurrency(simulation.annualFee, locale, currency) : '€' + simulation.annualFee.toLocaleString(locale || 'en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="section-header">
            <h2>Return Analysis (First 3 Years)</h2>
            <p>Detailed breakdown of net income and ROI for each year</p>
        </div>
        
        <% if (hasNegativeIncome) { %>
        <div class="alert alert-warning" role="alert">
            <strong>Warning:</strong> This simulation shows negative net income in some years. This may occur in real-world scenarios such as property renovations, high maintenance costs, or long-term investment strategies. Please review the values carefully.
        </div>
        <% } %>
        
        <div class="row g-4 mb-4">
            <% simulation.results.forEach((result) => { 
                const isNegative = result.netMonthly < 0 || result.annualNet < 0;
                const isNegativeROI = result.roi < 0;
            %>
            <div class="col-md-4">
                <div class="card h-100 <%= isNegative ? 'border-warning' : '' %>">
                    <div class="card-header <%= isNegative ? 'bg-warning text-dark' : 'bg-primary text-white' %>">
                        <h5 class="card-title mb-0">Year <%= result.year %></h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <strong class="text-muted d-block mb-1 small">Net Monthly Income</strong>
                            <span class="<%= result.netMonthly < 0 ? 'text-danger' : '' %>">
                                <%= typeof formatCurrency !== 'undefined' ? formatCurrency(result.netMonthly, locale, currency) : '€' + result.netMonthly.toLocaleString(locale || 'en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %>
                            </span>
                        </div>
                        <div class="mb-3">
                            <strong class="text-muted d-block mb-1 small">Annual Net Income</strong>
                            <span class="<%= result.annualNet < 0 ? 'text-danger' : '' %>">
                                <%= typeof formatCurrency !== 'undefined' ? formatCurrency(result.annualNet, locale, currency) : '€' + result.annualNet.toLocaleString(locale || 'en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %>
                            </span>
                        </div>
                        <div>
                            <strong class="text-muted d-block mb-1 small">Return on Investment (ROI)</strong>
                            <span class="<%= isNegativeROI ? 'text-danger' : '' %>">
                                <%= typeof formatNumber !== 'undefined' ? formatNumber(result.roi, locale) : result.roi.toLocaleString(locale || 'en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %>%
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>

        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <a href="/" class="btn btn-outline-primary">New Simulation</a>
        </div>
    </main>
</div>

